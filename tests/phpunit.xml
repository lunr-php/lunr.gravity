<phpunit xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:noNamespaceSchemaLocation="https://schema.phpunit.de/10.5/phpunit.xsd"
         bootstrap="test.bootstrap.inc.php"
         backupGlobals="false"
         colors="true"
         cacheDirectory="../build/.phpunit.cache"
         backupStaticProperties="false"
         requireCoverageMetadata="true"
         displayDetailsOnTestsThatTriggerDeprecations="true"
         displayDetailsOnTestsThatTriggerErrors="true"
         displayDetailsOnTestsThatTriggerNotices="true"
         displayDetailsOnTestsThatTriggerWarnings="true"
         displayDetailsOnPhpunitDeprecations="true">
    <php>
        <ini name="zend.enable_gc" value="1"/>
    </php>
    <testsuites>
        <testsuite name="Exceptions">
            <directory>../src/Lunr/Gravity/Exceptions/Tests/</directory>
        </testsuite>
        <testsuite name="MySQL">
            <directory>../src/Lunr/Gravity/MySQL/Tests/</directory>
        </testsuite>
        <testsuite name="MariaDB">
            <directory>../src/Lunr/Gravity/MariaDB/Tests/</directory>
        </testsuite>
        <testsuite name="SQLite3">
            <directory>../src/Lunr/Gravity/SQLite3/Tests/</directory>
        </testsuite>
        <testsuite name="Gravity">
            <directory>../src/Lunr/Gravity/Tests/</directory>
        </testsuite>
    </testsuites>
    <coverage>
        <report>
            <clover outputFile="../build/logs/clover.xml"/>
            <html outputDirectory="../build/coverage" lowUpperBound="35" highLowerBound="70"/>
        </report>
    </coverage>
    <logging>
        <junit outputFile="../build/logs/junit.xml"/>
    </logging>
    <source>
        <include>
            <directory>../src/Lunr/</directory>
        </include>
        <exclude>
            <directory>../src/Lunr/Gravity/Tests/</directory>
            <directory>../src/Lunr/Gravity/Exceptions/Tests/</directory>
            <directory>../src/Lunr/Gravity/MariaDB/Tests/</directory>
            <directory>../src/Lunr/Gravity/MySQL/Tests/</directory>
            <directory>../src/Lunr/Gravity/SQLite3/Tests/</directory>
        </exclude>
    </source>
</phpunit>
